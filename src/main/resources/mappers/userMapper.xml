<?xml version="1.0" encoding="UTF-8"?>
<!-- Seller Mapper에다가 2개의 기능을 넣어야한다 (Insert와 select기능 -->

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.jung.Jjoin.user.repository.UserRepository">
 
    <insert id="insertUser" parameterType="map">
        
        INSERT INTO
            `user`
            (   `email`
                ,`phoneNumber`
                , `nickName`
                , `name`
                , `password`
            )
        VALUES
            (  
                 #{email}
                , #{phoneNumber}
                , #{nickName}
                , #{name}
                , #{password}
            )
      </insert>
      
      <select id="selectCountByEmail" parameterType="String" resultType="int">
          SELECT
                count(*)
          FROM
                `user`
          WHERE
                `email` = #{email}
      </select>
      
      <select id="selectUser" parameterType="map" resultType="com.jung.Jjoin.user.domain.User">
          SELECT
                `id`
                , `email`
                , `phoneNumber`
                , `nickName`
                , `name`
                , `password`
                , `profileImage`
                , `createdAt`
                , `updatedAt`
          FROM
                `user`
          WHERE
                `email` = #{email}
          AND
                `password` = #{password}
      
      </select>
      
      
      
 
 </mapper>